# Development Environment Configuration
# Copy this file to development.env and update with your values
# NEVER commit actual secrets to version control

# =================================================================
# Core Application Settings
# =================================================================
ENVIRONMENT=development
DEBUG=true
PROJECT_NAME=JobQuest Navigator v3
VERSION=3.0.0

# =================================================================
# Security Settings - CHANGE THESE FOR YOUR ENVIRONMENT
# =================================================================
SECRET_KEY=your-development-secret-key-256-bits-minimum-length-required
JWT_SECRET_KEY=your-jwt-signing-key-keep-separate-from-app-secret
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =================================================================
# Database Configuration
# =================================================================
DATABASE_URL=postgresql+asyncpg://jobquest_user:your-db-password@localhost:5432/jobquest_navigator_v3
DB_USERNAME=jobquest_user
DB_PASSWORD=your-secure-db-password

# =================================================================
# Redis Configuration
# =================================================================
REDIS_URL=redis://:your-redis-password@localhost:6379/0
REDIS_PASSWORD=your-redis-password

# =================================================================
# AWS Configuration (for development/testing)
# =================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-development-aws-access-key
AWS_SECRET_ACCESS_KEY=your-development-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-development-bucket
AWS_S3_REGION_NAME=us-east-1

# =================================================================
# MinIO Configuration (for local development)
# =================================================================
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=your-minio-access-key
MINIO_SECRET_KEY=your-minio-secret-key
MINIO_SECURE=false
MINIO_ROOT_USER=your-minio-root-user
MINIO_ROOT_PASSWORD=your-minio-root-password

# =================================================================
# External API Keys - GET THESE FROM SERVICE PROVIDERS
# =================================================================
# Adzuna Job Search API
ADZUNA_API_ID=your-adzuna-api-id
ADZUNA_API_KEY=your-adzuna-api-key

# Google Maps API
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# OpenAI API
OPENAI_API_KEY=your-openai-api-key

# Stripe (for future payment features)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# =================================================================
# AWS Cognito (if using AWS authentication)
# =================================================================
COGNITO_REGION=us-east-1
COGNITO_USER_POOL_ID=your-cognito-user-pool-id
COGNITO_CLIENT_ID=your-cognito-client-id
COGNITO_APP_CLIENT_ID=your-cognito-app-client-id

# =================================================================
# CORS Configuration
# =================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002

# =================================================================
# Frontend Environment Variables (for React)
# =================================================================
REACT_APP_API_URL=http://localhost:8000
REACT_APP_GRAPHQL_URL=http://localhost:8000/graphql
REACT_APP_ENVIRONMENT=development
REACT_APP_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# =================================================================
# Monitoring & Logging (Optional)
# =================================================================
SENTRY_DSN=your-sentry-dsn-for-error-tracking
LOG_LEVEL=DEBUG

# =================================================================
# Email Configuration (for notifications)
# =================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-app-password
FROM_EMAIL=noreply@yourcompany.com

# =================================================================
# Development Tools
# =================================================================
# Set to true to enable additional development features
ENABLE_DOCS=true
ENABLE_GRAPHQL_PLAYGROUND=true
ENABLE_CORS_ORIGINS=true

# =================================================================
# Docker Development Overrides
# =================================================================
# These override the defaults in docker-compose.yml
POSTGRES_USER=jobquest_user
POSTGRES_PASSWORD=your-secure-postgres-password
POSTGRES_DB=jobquest_navigator_v3
REDIS_PASSWORD=your-redis-password