# Production Environment Configuration
# This file shows required environment variables for production
# DO NOT store actual secrets in this file - use AWS Secrets Manager or GitHub Secrets

# =================================================================
# Core Application Settings
# =================================================================
ENVIRONMENT=production
DEBUG=false
PROJECT_NAME=JobQuest Navigator v3
VERSION=3.0.0

# =================================================================
# Security Settings - REQUIRED IN PRODUCTION
# =================================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=${AWS_SECRET_MANAGER:jobquest-navigator-v3-production-app-secret-key}
JWT_SECRET_KEY=${AWS_SECRET_MANAGER:jobquest-navigator-v3-production-jwt-secret-key}
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15

# =================================================================
# Database Configuration - REQUIRED
# =================================================================
DATABASE_URL=${AWS_SECRET_MANAGER:jobquest-navigator-v3-production-database-url}
DB_USERNAME=${AWS_SECRET_MANAGER:jobquest-navigator-v3-production-db-username}
DB_PASSWORD=${AWS_SECRET_MANAGER:jobquest-navigator-v3-production-db-password}

# =================================================================
# Redis Configuration - REQUIRED
# =================================================================
REDIS_URL=${AWS_SECRET_MANAGER:jobquest-navigator-v3-production-redis-url}
REDIS_PASSWORD=${AWS_SECRET_MANAGER:jobquest-navigator-v3-production-redis-password}

# =================================================================
# AWS Configuration - REQUIRED
# =================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=${AWS_SECRET_MANAGER:jobquest-navigator-v3-production-aws-access-key-id}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_MANAGER:jobquest-navigator-v3-production-aws-secret-access-key}
AWS_STORAGE_BUCKET_NAME=caa900resume
AWS_S3_REGION_NAME=us-east-1

# =================================================================
# External API Keys - REQUIRED FOR FULL FUNCTIONALITY
# =================================================================
# Adzuna Job Search API
ADZUNA_API_ID=${AWS_SECRET_MANAGER:jobquest-production-adzuna-api-id}
ADZUNA_API_KEY=${AWS_SECRET_MANAGER:jobquest-production-adzuna-api-key}

# Google Maps API
GOOGLE_MAPS_API_KEY=${AWS_SECRET_MANAGER:jobquest-production-google-maps-api-key}

# OpenAI API
OPENAI_API_KEY=${AWS_SECRET_MANAGER:jobquest-production-openai-api-key}

# Stripe (for payment features)
STRIPE_SECRET_KEY=${AWS_SECRET_MANAGER:jobquest-production-stripe-secret-key}
STRIPE_PUBLISHABLE_KEY=${AWS_SECRET_MANAGER:jobquest-production-stripe-publishable-key}

# =================================================================
# AWS Cognito Configuration
# =================================================================
COGNITO_REGION=us-east-1
COGNITO_USER_POOL_ID=${AWS_SECRET_MANAGER:jobquest-production-cognito-user-pool-id}
COGNITO_CLIENT_ID=${AWS_SECRET_MANAGER:jobquest-production-cognito-client-id}
COGNITO_APP_CLIENT_ID=${AWS_SECRET_MANAGER:jobquest-production-cognito-app-client-id}

# =================================================================
# Production CORS Configuration
# =================================================================
CORS_ORIGINS=https://app.jobquestnavigator.com,https://www.jobquestnavigator.com

# =================================================================
# Frontend Production URLs
# =================================================================
REACT_APP_API_URL=https://api.jobquestnavigator.com
REACT_APP_GRAPHQL_URL=https://api.jobquestnavigator.com/graphql
REACT_APP_ENVIRONMENT=production
REACT_APP_GOOGLE_MAPS_API_KEY=${AWS_SECRET_MANAGER:jobquest-production-google-maps-api-key}

# =================================================================
# Monitoring & Error Tracking - REQUIRED FOR PRODUCTION
# =================================================================
SENTRY_DSN=${AWS_SECRET_MANAGER:jobquest-production-sentry-dsn}
LOG_LEVEL=INFO

# =================================================================
# Email Configuration - REQUIRED FOR NOTIFICATIONS
# =================================================================
SMTP_HOST=${AWS_SECRET_MANAGER:jobquest-production-smtp-host}
SMTP_PORT=587
SMTP_USER=${AWS_SECRET_MANAGER:jobquest-production-smtp-user}
SMTP_PASSWORD=${AWS_SECRET_MANAGER:jobquest-production-smtp-password}
FROM_EMAIL=noreply@jobquestnavigator.com

# =================================================================
# Production Security Settings
# =================================================================
# Disable development features
ENABLE_DOCS=false
ENABLE_GRAPHQL_PLAYGROUND=false
ENABLE_CORS_ORIGINS=false

# Security headers
FORCE_HTTPS=true
SECURE_SSL_REDIRECT=true
CSRF_COOKIE_SECURE=true
SESSION_COOKIE_SECURE=true

# =================================================================
# Database Production Settings
# =================================================================
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# =================================================================
# Cache Configuration
# =================================================================
CACHE_TTL=300
REDIS_MAX_CONNECTIONS=50

# =================================================================
# Rate Limiting
# =================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20