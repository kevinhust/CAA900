# JobQuest Navigator v2 - Development Environment Configuration
# Local development environment settings

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
ENVIRONMENT=development
DEBUG=true
PROJECT_NAME=JobQuest Navigator v2 - Development
VERSION=2.0.0-dev

# Secret key for development (DO NOT use in production)
SECRET_KEY=dev-secret-key-change-before-production-2024
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# Local Docker PostgreSQL
DATABASE_URL=postgresql+asyncpg://jobquest_user:jobquest_password_2024@localhost:5433/jobquest_navigator_v2
DATABASE_NAME=jobquest_navigator_v2_dev
DATABASE_USERNAME=jobquest_user
DATABASE_PASSWORD=jobquest_password_2024
DATABASE_HOST=localhost
DATABASE_PORT=5433

# Connection pool settings
DATABASE_POOL_SIZE=5
DATABASE_POOL_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30

# ============================================================================
# CACHE CONFIGURATION (Redis)
# ============================================================================
REDIS_URL=redis://:jobquest_redis_2024@localhost:6380/0
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_PASSWORD=jobquest_redis_2024
REDIS_DB=0

# Cache TTL settings (seconds)
CACHE_TTL_SHORT=300      # 5 minutes
CACHE_TTL_MEDIUM=1800    # 30 minutes
CACHE_TTL_LONG=3600      # 1 hour

# ============================================================================
# AWS CONFIGURATION
# ============================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-development-access-key
AWS_SECRET_ACCESS_KEY=your-development-secret-key

# AWS Cognito (Development User Pool)
COGNITO_REGION=us-east-1
COGNITO_USER_POOL_ID=us-east-1_blSZREFys
COGNITO_CLIENT_ID=5iui547bod6sqgsi1a4heidpep
COGNITO_APP_CLIENT_ID=5iui547bod6sqgsi1a4heidpep

# AWS S3 Storage
AWS_STORAGE_BUCKET_NAME=jobquest-resumes-dev
AWS_S3_REGION_NAME=us-east-1
AWS_S3_CUSTOM_DOMAIN=
AWS_S3_FILE_OVERWRITE=true

# ============================================================================
# CORS SETTINGS
# ============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://127.0.0.1:3000,http://127.0.0.1:3001
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOW_HEADERS=*

# ============================================================================
# EXTERNAL APIS
# ============================================================================
# OpenAI API for AI features
OPENAI_API_KEY=your-openai-api-key-here

# Adzuna API for job data
ADZUNA_API_ID=your-adzuna-api-id
ADZUNA_API_KEY=your-adzuna-api-key

# Google Maps API for location features
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL=DEBUG
LOG_FORMAT=colored
LOG_FILE_ENABLED=true
LOG_FILE_PATH=logs/development.log
LOG_FILE_MAX_SIZE=10MB
LOG_FILE_BACKUP_COUNT=5

# Structured logging
LOG_JSON_FORMAT=false
LOG_INCLUDE_TIMESTAMP=true
LOG_INCLUDE_THREAD_ID=true

# ============================================================================
# DEVELOPMENT FEATURES
# ============================================================================
# Enable development tools
ENABLE_DEBUG_TOOLBAR=true
ENABLE_PROFILING=true
ENABLE_HOT_RELOAD=true

# API Documentation
ENABLE_DOCS=true
ENABLE_REDOC=true
DOCS_URL=/docs
REDOC_URL=/redoc

# GraphQL Development
GRAPHQL_DEBUG=true
GRAPHQL_INTROSPECTION=true
GRAPHQL_PLAYGROUND=true

# ============================================================================
# SECURITY SETTINGS (Development)
# ============================================================================
# Relaxed security for development
SECURE_SSL_REDIRECT=false
SECURE_HSTS_SECONDS=0
SECURE_CONTENT_TYPE_NOSNIFF=true
SECURE_BROWSER_XSS_FILTER=true
SECURE_FRAME_DENY=false

# Session settings
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# CSRF settings
CSRF_COOKIE_SECURE=false
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================================================
# PERFORMANCE SETTINGS
# ============================================================================
# Uvicorn server settings
UVICORN_HOST=0.0.0.0
UVICORN_PORT=8000
UVICORN_RELOAD=true
UVICORN_LOG_LEVEL=debug
UVICORN_WORKERS=1

# Request timeouts
REQUEST_TIMEOUT=30
SLOW_QUERY_THRESHOLD=1.0

# ============================================================================
# MONITORING AND OBSERVABILITY
# ============================================================================
# Metrics collection
ENABLE_METRICS=true
METRICS_ENDPOINT=/metrics

# Health checks
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5

# Distributed tracing
ENABLE_TRACING=false
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# ============================================================================
# EMAIL CONFIGURATION (Development)
# ============================================================================
# Use MailHog for email testing
EMAIL_BACKEND=smtp
EMAIL_HOST=localhost
EMAIL_PORT=1026
EMAIL_USE_TLS=false
EMAIL_USE_SSL=false
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@jobquest-navigator-dev.com

# ============================================================================
# BACKGROUND TASKS
# ============================================================================
# Celery configuration for development
CELERY_BROKER_URL=redis://:jobquest_redis_2024@localhost:6380/1
CELERY_RESULT_BACKEND=redis://:jobquest_redis_2024@localhost:6380/2
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC

# ============================================================================
# FEATURE FLAGS
# ============================================================================
FEATURE_AI_SUGGESTIONS=true
FEATURE_COMPANY_RESEARCH=true
FEATURE_RESUME_BUILDER=true
FEATURE_JOB_MATCHING=true
FEATURE_SKILLS_ASSESSMENT=true
FEATURE_INTERVIEW_PREP=true

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_BURST=100

# ============================================================================
# DATA VALIDATION
# ============================================================================
STRICT_VALIDATION=false
ALLOW_TEST_DATA=true
SKIP_EMAIL_VERIFICATION=true

# ============================================================================
# DEVELOPMENT UTILITIES
# ============================================================================
# Seed data
LOAD_SAMPLE_DATA=true
SAMPLE_DATA_COUNT=50

# Mock external services
MOCK_EXTERNAL_APIS=false
MOCK_EMAIL_SENDING=true
MOCK_FILE_UPLOADS=false